@model IEnumerable<WebBanGiayMVC.Models.SanPham>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var sanPham = ViewBag.SanPham as List<WebBanGiayMVC.Models.SanPham>;
}
<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Blank Page</h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <h2>AdminIndex</h2>

            <p>
                @Html.ActionLink("Create New", "InsertOrUpdate")
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenSanPham)
                        </th>
                        
                        <th>
                            @Html.DisplayNameFor(model => model.GiaSanPham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AvatarSanPham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DanhSachAnhSanPham)
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.HangSanPham)
                        </th>
                        
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in @sanPham)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenSanPham)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.GiaSanPham)
                            </td>
                            <td>
                                <img src="@item.AvatarSanPham" style="width:50px;height:50px" />
                            </td>
                            <td>
                                <img src="@item.DanhSachAnhSanPham" style="width:50px;height:50px" />
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.HangSanPham)
                            </td>
                            
                            <td>
                                @Html.ActionLink("Edit", "InsertOrUpdate", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var R = {
            Init: function () {
                R.InitDataTable();
            },
            RegisterEvent: function () { },
            InitDataTable: function () {
                $('.table').DataTable()
            }
        }
        R.Init()
    </script>
}
