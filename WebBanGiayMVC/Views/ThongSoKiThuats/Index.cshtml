@model IEnumerable<WebBanGiayMVC.Models.ThongSoKiThuat>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="main-page">
        <h2 class="title1">Blank Page</h2>
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <h2>Index</h2>

            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.StyleSanPham)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Mau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.KichThuocSanPham)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.StyleSanPham)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Mau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KichThuocSanPham)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        var R = {
            Init: function () {
                R.InitDataTable();
            },
            RegisterEvent: function () { },
            InitDataTable: function () {
                $('.table').DataTable()
            }
        }
        R.Init()
    </script>
}